<div class="admin-courses">
    <h1>Manage Courses</h1>
    
    <div class="course-actions">
        <a href="/admin/courses/new" class="btn btn-primary">Create New Course</a>
    </div>
    
    <% if (courses.length === 0) { %>
        <div class="empty-state">
            <p>No courses available. Start by creating a new course.</p>
        </div>
    <% } else { %>
        <table class="courses-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Instructor</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(course => { %>
                    <tr>
                        <td><%= course.title %></td>
                        <td><%= course.instructor %></td>
                        <td>$<%= course.price %></td>
                        <td>
                            <a href="/admin/courses/edit/<%= course._id %>" class="btn btn-secondary">Edit</a>
                            <form action="/admin/courses/delete/<%= course._id %>" method="POST" class="inline-form">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</div> 